    <div style="padding: 3rem">
    <p><% if user.photo.attached? %>
        <%= cl_image_tag user.photo.key, width: 30, style: "border-radius: 100%;" %>
    <% end %><br>
    @<%= user.pseudo %><br>
    <span>Head of Growth @Ledger</span></p>
    </div>
  <% end %>


  </div>
  <div style="margin-bottom: 100px">
  <h3 style="margin-top: 20px;">Adventurers</h3>
