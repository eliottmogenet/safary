  <hr>
   <% @adventurers_sort.reverse.each do |user| %>
    <div style="text-align: start; height: 50px; margin-left: 10px; display: flex; justify-content: space-between;">
    <p><% if user.photo.attached? %>
        <%= cl_image_tag user.photo.key, width: 30, style: "border-radius: 100%;" %>
    <% end %>@<%= user.pseudo %><br>
    <span>Head of Growth @Ledger</span></p>
    </p>
    <p style="color: #D25C5C"><%= (user.template_comments + user.guild_comments).count %> <i class="fa-solid fa-comments"></i></p>
    </div>
