<% if user_signed_in? %>
    <%= simple_form_for(current_user, url: user_registration_path(current_user)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :photo, as: :file, label: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "+ Add a photo", id: "share2" %>
    </div>
  <% end %>
<% end %>
