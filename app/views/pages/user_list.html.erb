<body>

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">


    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

      <ul class="navbar-nav me-auto">
        <%# if user_signed_in? %>
          <li class="nav-item">
            <h5 style="margin-top: 8px; margin-right: 20px; font-weight: 900; color: #D25C5C">Safary</h5>
          </li>
        <%# else %>
          <!--li class="nav-item"-->
            <%#= link_to "Login", new_user_session_path, class: "nav-link" %>
          <!--/li-->
        <%# end %>
      </ul>
  </div>
</div>



<div class="container-fluid" id="templates-container2">

<h3 style="text-align: center; color:black; font-weight: 700; margin-bottom: 40px;">+120 Web3 + Web2 projects joined Safary</h3>


<div style="width: 500px; margin-left: 490px; margin-bottom: 60px;" id="form-search">
<%= form_tag user_list_path, style: "display: flex; justify-content: center; text-align: center;", method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a project"
  %>
  <%= submit_tag "ðŸ” Search", class: "edit-button1" %>
<% end %>
</div>




<div id="sub-container" style="margin-top: 40px; margin-bottom: 60px;">

  <div class="templates-list">
    <% @projects.each do |project| %>
      <div class="template-card">
        <div style="display: flex; justify-content: start">
          <% if project.photo.attached? %>
              <%= cl_image_tag project.photo.key, width: 25, height: 25, style: "border-radius: 100%"  %>
            <% end %>
          <h6 style="font-weight: 900; margin-left: 10px; margin-top: 5px; color: black;"><%= project.name %></h6>
        </div>
      </div>
    <% end %>
  </div>






















</div>
</body>





